{
  "name": "vscode-codeflow-by-dify",
  "displayName": "CodeFlow by Dify",
  "description": "基于 Dify API 的智能代码补全插件，支持多种编程语言的 AI 驱动代码补全",
  "version": "1.0.1",
  "publisher": "longmo",
  "engines": {
    "vscode": "^1.74.0"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/your-username/vscode-codeflow-by-dify.git"
  },
  "bugs": {
    "url": "https://github.com/your-username/vscode-codeflow-by-dify/issues"
  },
  "homepage": "https://github.com/your-username/vscode-codeflow-by-dify#readme",
  "categories": [
    "Other",
    "Machine Learning",
    "Snippets"
  ],
  "keywords": [
    "code completion",
    "ai",
    "dify",
    "智能补全"
  ],
  "activationEvents": [
    "onLanguage:javascript",
    "onLanguage:typescript",
    "onLanguage:typescriptreact",
    "onLanguage:javascriptreact",
    "onLanguage:vue",
    "onLanguage:svelte",
    "onLanguage:html",
    "onLanguage:css",
    "onLanguage:scss",
    "onLanguage:python",
    "onLanguage:go",
    "onLanguage:java",
    "onLanguage:php",
    "onLanguage:rust"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "configuration": {
      "type": "object",
      "title": "Dify Code Completion",
      "properties": {
        "dify.codeCompletion.apiKey": {
          "type": "string",
          "default": "",
          "description": "Your Dify API Key",
          "markdownDescription": "您的 Dify API 密钥。获取方式：登录 Dify 控制台 → API 管理 → 创建密钥"
        },
        "dify.codeCompletion.workflowId": {
          "type": "string",
          "default": "",
          "description": "The Workflow ID in Dify for code completion",
          "markdownDescription": "用于代码补全的 Dify 工作流 ID"
        },
        "dify.codeCompletion.baseUrl": {
          "type": "string",
          "default": "https://api.dify.ai/v1",
          "description": "Dify API base URL",
          "markdownDescription": "Dify API 基础 URL（私有部署时可修改）"
        },
        "dify.codeCompletion.autoTrigger": {
          "type": "boolean",
          "default": true,
          "description": "Enable auto-trigger on typing",
          "markdownDescription": "启用输入时自动触发补全"
        },
        "dify.codeCompletion.triggerDelay": {
          "type": "number",
          "default": 500,
          "minimum": 100,
          "maximum": 5000,
          "description": "Delay in ms before triggering auto-completion",
          "markdownDescription": "自动补全触发延迟（毫秒）"
        },
        "dify.codeCompletion.contextLines": {
          "type": "number",
          "default": 10,
          "minimum": 5,
          "maximum": 50,
          "description": "Number of lines before cursor to include as context",
          "markdownDescription": "作为上下文的光标前行数"
        },
        "dify.codeCompletion.languages": {
          "type": "object",
          "additionalProperties": {
            "type": "string"
          },
          "default": {
            "javascript": "javascript",
            "typescript": "typescript",
            "typescriptreact": "typescript",
            "javascriptreact": "javascript",
            "vue": "vue",
            "svelte": "javascript",
            "html": "html",
            "css": "css",
            "scss": "css",
            "sass": "css",
            "less": "css",
            "json": "json",
            "jsonc": "json",
            "yaml": "yaml",
            "xml": "xml",
            "python": "python",
            "go": "go",
            "java": "java",
            "cpp": "cpp",
            "c": "c",
            "csharp": "csharp",
            "php": "php",
            "ruby": "ruby",
            "rust": "rust",
            "kotlin": "kotlin",
            "swift": "swift",
            "sql": "sql",
            "markdown": "markdown",
            "shellscript": "bash"
          },
          "description": "Map VS Code language IDs to Dify language codes",
          "markdownDescription": "VS Code 语言 ID 到 Dify 语言代码的映射"
        },
        "dify.codeCompletion.enabled": {
          "type": "boolean",
          "default": true,
          "description": "Enable/disable the extension",
          "markdownDescription": "启用/禁用插件"
        },
        "dify.codeCompletion.testConnection": {
          "type": "boolean",
          "default": false,
          "description": "Test API connection (click to test)",
          "markdownDescription": "**测试 API 连接**  \n点击下方按钮测试连接状态。确保已正确配置 API Key 和 Workflow ID。"
        },
        "dify.codeCompletion.triggerCharacters": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": [".", " ", "(", "=", "{", "\n"],
          "description": "Characters that trigger auto-completion",
          "markdownDescription": "触发自动补全的字符列表。支持特殊字符：\\n (换行)、\\t (制表符)、\\s (空格)"
        },
        "dify.codeCompletion.triggerKeybinding": {
          "type": "object",
          "properties": {
            "key": {
              "type": "string",
              "default": "ctrl+alt+space"
            },
            "mac": {
              "type": "string", 
              "default": "cmd+shift+space"
            },
            "when": {
              "type": "string",
              "default": "editorTextFocus"
            }
          },
          "default": {
            "key": "ctrl+alt+space",
            "mac": "cmd+shift+space", 
            "when": "editorTextFocus"
          },
          "description": "Custom keybinding for triggering code completion",
          "markdownDescription": "自定义触发代码补全的快捷键配置。支持 VS Code 快捷键格式，如：ctrl+alt+space、cmd+shift+i 等"
        }
      }
    },
    "commands": [
      {
        "command": "dify.triggerCompletion",
        "title": "Trigger Code Completion",
        "category": "Dify"
      },
      {
        "command": "dify.openSettings",
        "title": "Open Settings",
        "category": "Dify"
      },
      {
        "command": "dify.testConnection",
        "title": "Test API Connection",
        "category": "Dify"
      },
      {
        "command": "dify.updateKeybinding",
        "title": "Update Keybinding Configuration",
        "category": "Dify"
      }
    ],
    "keybindings": [
      {
        "command": "dify.triggerCompletion",
        "key": "ctrl+alt+space",
        "mac": "cmd+shift+space",
        "when": "editorTextFocus"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./"
  },
  "devDependencies": {
    "@types/vscode": "^1.74.0",
    "@types/node": "16.x",
    "typescript": "^4.9.4"
  },
  "dependencies": {
    "node-fetch": "^2.6.7",
    "@types/node-fetch": "^2.6.2"
  }
}