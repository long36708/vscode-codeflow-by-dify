{
  "name": "vscode-codeflow-by-dify",
  "displayName": "Dify Code Completion",
  "description": "AI-powered code completion using Dify workflows",
  "version": "1.0.0",
  "publisher": "longmo",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "dify.triggerCompletion",
        "title": "触发 Dify 代码补全"
      },
      {
        "command": "dify.openSettings",
        "title": "打开 Dify 设置"
      },
      {
        "command": "dify.testConnection",
        "title": "测试 Dify 连接"
      },
      {
        "command": "dify.updateKeybinding",
        "title": "更新快捷键配置"
      }
    ],
    "configuration": {
      "title": "Dify Code Completion",
      "properties": {
        "dify.codeCompletion.apiKey": {
          "type": "string",
          "default": "",
          "description": "Dify API Key",
          "order": 1
        },
        "dify.codeCompletion.baseUrl": {
          "type": "string",
          "default": "https://api.dify.ai/v1",
          "description": "Dify API 基础 URL",
          "order": 3
        },
        "dify.codeCompletion.appType": {
          "type": "string",
          "enum": [
            "workflow",
            "chatbot",
            "auto"
          ],
          "enumDescriptions": [
            "工作流应用 - 适合复杂的代码生成逻辑",
            "聊天助手应用 - 适合对话式代码补全",
            "自动选择 - 根据首选应用类型智能选择"
          ],
          "default": "workflow",
          "description": "Dify 应用类型",
          "order": 4
        },
        "dify.codeCompletion.fallbackEnabled": {
          "type": "boolean",
          "default": true,
          "description": "启用降级策略 - 当主应用类型失败时尝试其他类型",
          "order": 5
        },
        "dify.codeCompletion.preferredAppType": {
          "type": "string",
          "enum": [
            "workflow",
            "chatbot"
          ],
          "enumDescriptions": [
            "工作流应用",
            "聊天助手应用"
          ],
          "default": "workflow",
          "description": "在自动模式下的首选应用类型",
          "order": 6
        },
        "dify.codeCompletion.enabled": {
          "type": "boolean",
          "default": true,
          "description": "启用 Dify 代码补全",
          "order": 7
        },
        "dify.codeCompletion.autoTrigger": {
          "type": "boolean",
          "default": true,
          "description": "自动触发补全",
          "order": 8
        },
        "dify.codeCompletion.triggerDelay": {
          "type": "number",
          "default": 500,
          "minimum": 100,
          "maximum": 5000,
          "description": "触发延迟（毫秒）",
          "order": 9
        },
        "dify.codeCompletion.contextLines": {
          "type": "number",
          "default": 10,
          "minimum": 1,
          "maximum": 50,
          "description": "上下文行数",
          "order": 10
        },
        "dify.codeCompletion.triggerCharacters": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": [
            ".",
            " ",
            "(",
            "=",
            "{",
            "\n"
          ],
          "description": "触发字符列表",
          "order": 11
        },
        "dify.codeCompletion.triggerKeybinding": {
          "type": "object",
          "properties": {
            "key": {
              "type": "string",
              "default": "ctrl+alt+space"
            },
            "mac": {
              "type": "string",
              "default": "cmd+shift+semicolon"
            },
            "when": {
              "type": "string",
              "default": "editorTextFocus"
            }
          },
          "default": {
            "key": "ctrl+alt+space",
            "mac": "cmd+shift+semicolon",
            "when": "editorTextFocus"
          },
          "description": "快捷键配置",
          "order": 12
        },
        "dify.codeCompletion.testConnection": {
          "type": "boolean",
          "default": false,
          "description": "测试连接（设置为 true 时自动测试）",
          "order": 13
        },
        "dify.codeCompletion.languages": {
          "type": "object",
          "default": {
            "javascript": "javascript",
            "typescript": "typescript",
            "typescriptreact": "typescript",
            "javascriptreact": "javascript",
            "vue": "vue",
            "svelte": "javascript",
            "html": "html",
            "css": "css",
            "scss": "css",
            "sass": "css",
            "less": "css",
            "json": "json",
            "jsonc": "json",
            "yaml": "yaml",
            "xml": "xml",
            "python": "python",
            "go": "go",
            "java": "java",
            "cpp": "cpp",
            "c": "c",
            "csharp": "csharp",
            "php": "php",
            "ruby": "ruby",
            "rust": "rust",
            "kotlin": "kotlin",
            "swift": "swift",
            "sql": "sql",
            "markdown": "markdown",
            "shellscript": "bash"
          },
          "description": "支持的编程语言映射",
          "order": 14
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./"
  },
  "devDependencies": {
    "@types/vscode": "^1.74.0",
    "@types/node": "16.x",
    "typescript": "^4.9.4"
  },
  "dependencies": {
    "node-fetch": "^2.6.7",
    "@types/node-fetch": "^2.6.2"
  }
}